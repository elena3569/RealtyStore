@model realtyStore.Models.Realty

@{
    Layout = Layout = "~/Views/Shared/_Layout-RealtorMode.cshtml";
    ViewBag.Title = "Редактирование объявления";
}

<h3>Редактирование объявления</h3>
<form method="post" class="edit-form">
    <input type="hidden" value="Edit" id="typeForm" />
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="hidden" value="@Model.Status" id="statusTypeRealty" />

    <div>

        <div class="my-nav">
            <div class="input-box">
                <label for="status-type-realty">Статус</label>
                <select class="form-select" value="@Model.Status" id="status-type-realty" aria-label="Default select example" name="Status"">
                    <option value=@realtyStore.Models.Statuses.SOLD>Продано</option>
                    <option value=@realtyStore.Models.Statuses.LEASED>Сдано</option>
                </select>
            </div>
            <div class="input-box">
                <label for="date">Kонец аренды</label>
                <div id="date">
                    <input type="date" name="date" id="dateValue" required />
                    <p id="error" style="color:red; display:none">Введите корректное значение</p>
                </div>
            </div>
        </div>
    

    <hr />

    <textarea class="m-10" value=@Model.Description placeholder="Описание" name="Description" type="text"></textarea>


    </div>
    <div class="my-nav m-10">
        <a href="/RealtorMode/Realties"> Отменить </a>
        <button class="btn btn-primary" type="submit" id="btn"> Сохранить </button>
    </div>

</form>
<script src="@Url.Content("~/Scripts/EditRealty.js")" type="text/javascript"></script>