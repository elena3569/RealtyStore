@model realtyStore.Models.Realty

@{
    Layout = Layout = "~/Views/Shared/_Layout-RealtorMode.cshtml";
    ViewBag.Title = "Редактирование заявки";
}


<form method="post">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="hidden" value="@Model.Status" id="statusTypeVal" />

    <select class="form-select" value="@Model.Status" id="status-type" aria-label="Default select example" name="Status" style="width:100px">
        <option value=@realtyStore.Models.Statuses.SOLD>Продано</option>
        <option value=@realtyStore.Models.Statuses.LEASED>Сдано</option>
    </select>

    <hr />

    <textarea value=@Model.Description placeholder="Описание" name="Description" type="text"></textarea>
    
    конец аренды
    <input type="date" name="date" />

    <button type="submit"> Сохранить </button>
    <a href="/RealtorMode/Realties"> Отменить </a>
</form>
<script src="@Url.Content("~/Scripts/EditForm.js")" type="text/javascript"></script>