@model realtyStore.Models.ApplicationToRealtor

@{
    Layout = Layout = "~/Views/Shared/_Layout-RealtorMode.cshtml";
    ViewBag.Title = "Редактирование заявки";
}
<h3>Редактирование заявки</h3>

<form method="post" class="edit-form">
    <input type="hidden" value="@Model.Id" name="Id" />
    <input type="hidden" value="@Model.Status" id="statusTypeVal" />
    <input type="hidden" value="@Model.RealtyType" id="RealtyTypeVal" />
    <input type="hidden" value=@Model.CityId id="CityIdVal" />
    <div class="group-input bcg-white">
        <select class="form-select" id="status-type" aria-label="Default select example" name="Status">
            <option value=@realtyStore.Models.Statuses.RENT>Снять</option>
            <option value=@realtyStore.Models.Statuses.RENT_OUT>Сдать</option>
            <option value=@realtyStore.Models.Statuses.BUY>Купить</option>
            <option value=@realtyStore.Models.Statuses.SALE>Продать</option>
        </select>

        <select class="form-select" id="realty-type" aria-label="Default select example" name="RealtyType">
            <option value="@realtyStore.Models.Types.APARTMENT">@realtyStore.Models.Types.APARTMENT</option>
            <option value="@realtyStore.Models.Types.ROOM">@realtyStore.Models.Types.ROOM</option>
            <option value="@realtyStore.Models.Types.HOUSE">@realtyStore.Models.Types.HOUSE</option>
            <option value="@realtyStore.Models.Types.BED">@realtyStore.Models.Types.BED</option>
            <option value="@realtyStore.Models.Types.GARAGE">@realtyStore.Models.Types.GARAGE</option>
            <option value="@realtyStore.Models.Types.WAREHOUSE">@realtyStore.Models.Types.WAREHOUSE</option>
            <option value="@realtyStore.Models.Types.BUILDING">@realtyStore.Models.Types.BUILDING</option>
            <option value="@realtyStore.Models.Types.TRADING_AREA">@realtyStore.Models.Types.TRADING_AREA</option>
            <option value="@realtyStore.Models.Types.PRODUCTION">@realtyStore.Models.Types.PRODUCTION</option>
            <option value="@realtyStore.Models.Types.OFFICE">@realtyStore.Models.Types.OFFICE</option>
            <option value="@realtyStore.Models.Types.LAND_PLOT">@realtyStore.Models.Types.LAND_PLOT</option>

        </select>


        <div class="group-input m-10 bcg-white">
            <div class="input-box">
                <label class="form-label" for="price">Цена</label>
                <input class="form-control" id="price" placeholder="Желаемая цена" name="Price" min="0" type="number" value="@Model.Price" required />
            </div>
            <div class="input-box" id="square">
                <label class="form-label" for="square-input">Площадь</label>
                <input class="form-control" id="square-input" placeholder="Площадь" name="Square" min="0" type="number" value="@Model.Square" />
            </div>
            <div class="input-box" id="numberRoom">
                <label class="form-label" for="numberRoom-input">Количество комнат</label>
                <input class="form-control" id="numberRoom-input" placeholder="Количество комнат" name="NumberRoom" min="0" type="number" value="@Model.NumberRoom" />
            </div>
            <div class="input-box" id="floor">
                <label class="form-label" for="floor-input">Этаж</label>
                <input class="form-control" id="floor-input" placeholder="Этаж" name="Floor" min="0" type="number" value="@Model.Floor" />
            </div>
            <div class="input-box">
                <label class="form-label" for="floors">Этажей в доме</label>
                <input class="form-control" id="floors" placeholder="Этажей в доме" name="Floors" min="0" type="number"  value="@Model.Floors"/>
            </div>
            <div class="input-box">
                <label class="form-label" for="address">Адрес</label>
                <select class="form-select" aria-label="default select example" id="CityId" name="CityId">
                    @foreach (var c in ViewBag.Cities)
                    {
                        <option value=@c.Id>@c.Name</option>
                    }
                </select>
            </div>
            <div class="input-box">
                 <input class="form-control" id="address" placeholder="Адрес" name="Address" type="text" value="@Model.Address" required />
            </div>
        </div>

        <hr />

        <div class="group-input m-10 bcg-white">
            <div class="input-box">
                <label class="form-label" for="phone">Телефон</label>
                <input class="form-control" id="phone" placeholder="Телефон" name="Phone" type="tel" value="@Model.Phone" required />
            </div>
            <div class="input-box">
                <label class="form-label" for="lastName">Фамилия</label>
                <input class="form-control" id="lastname" value=@Model.LastName placeholder="Фамилия" name="LastName" type="text" required />
            </div>
            <div class="input-box">
                <label class="form-label" for="name">Имя</label>
                <input class="form-control" id="firstname" value=@Model.FirstName placeholder="Имя" name="FirstName" type="text" required />
            </div>
            <div class="input-box">
                <label class="form-label" for="patronymic">Отчество</label>
                <input class="form-control" id="patronymic" value=@Model.Patronymic placeholder="Отчество" name="Patronymic" type="text" />
            </div>
            <div class="input-box">
                <label class="form-label" for="passport">Паспорт</label>
                <input class="form-control" id="passport" value="@Model.Passport" placeholder="Паспорт" name="Passport" type="text" required />
            </div>
        </div>


        <textarea class="input-box m-10" value=@Model.Description placeholder="Описание" name="Description" type="text"></textarea>

    </div>
        <div class="my-nav m-10">
            <a href="/RealtorMode/Apps"> Отменить </a>
            <button class="btn btn-primary" type="submit" id="btnsave"> Сохранить </button>
        </div>
</form>
<script src="@Url.Content("~/Scripts/EditApp.js")" type="text/javascript"></script>